{
  "manifest_version": 2,

  "name": "CheckDone for GitHub readmes",
  "description": "This extensions transforms items list sections of GitHub readmes into checkable TODO lists.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },

  "icons": { 
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": [
        "lib/jquery-3.5.1.min.js",
        "lib/md5.js",
        "lib/frequentFireLimit.js",
        "lib/functions.js",
        "js/store_functions.js",
        "js/store.js",
        "js/content_functions.js",
        "js/content.js"
      ],
      "css": [
        "css/content.css"
      ] 
    }
  ],

  "background": {
    "scripts": [
      "lib/jquery-3.5.1.min.js",
      "lib/md5.js",
      "lib/functions.js",
      "js/store_functions.js",
      "js/store.js",
      "js/background.js"
    ]
  },

  "permissions": [
   "activeTab"
  ]
}
